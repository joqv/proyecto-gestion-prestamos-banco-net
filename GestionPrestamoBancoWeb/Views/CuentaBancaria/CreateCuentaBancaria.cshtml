    <a asp-action="CuentasPorCliente" asp-controller="CuentaBancaria" asp-route-id="@ViewBag.idCliente">Cancelar</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
