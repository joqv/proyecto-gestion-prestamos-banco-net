@model GestionPrestamoBancoWeb.Models.Dto.Login

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow p-4">
                <h3 class="text-center mb-3">Iniciar Sesión</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="LoginUsuario" method="post">
                    <div class="mb-3">
                        <label class="form-label">Usuario</label>
                        <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
